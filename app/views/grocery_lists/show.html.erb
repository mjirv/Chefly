<div class="content">
    <div class="inner-content">
    <h2><strong>Your Grocery List</strong></h2>
    <%= button_to "Back", dashboard_path(@grocery_list.user_id), method: :get %>
    <%= button_to "Edit", edit_grocery_list_path(@grocery_list.id), method: :get %>

    <%# Only display the mapping button if the user is an admin %>
    <% if User.find(session[:user_id]).permission == "admin" %>
        <%= button_to "Mapping", gl_item_mapping_path(@grocery_list.id), method: :get %>
    <% end %>

    <%# List the items in the grocery list %>
    <ul>
    	<% @grocery_list.grocery_list_items.each do |item| %>
    		<% if item.recipe_item.name[-1] != ":" %>
    			<li><%= item.to_s %>
    			<br />
    		<% end %>
    	<% end %>
    </ul>
    </div>
</div>